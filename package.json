{
  "name": "dvs-base64tofile",
  "version": "1.0.5",
  "description": "Base64 to file converter",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "incrementVersion": "npm version patch",
    "publish": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hronex/base64tofile.git"
  },
  "keywords": [
    "base64",
    "base64 to file converter"
  ],
  "author": "Hronex",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hronex/base64tofile/issues"
  },
  "homepage": "https://github.com/Hronex/base64tofile#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.5.0",
    "prettier": "^1.15.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  }
}
